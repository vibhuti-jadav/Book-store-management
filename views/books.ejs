<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>üìö Book List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f4f6f9;
    }

    .card {
      border: none;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.07);
    }

    table img {
      border-radius: 6px;
    }

    .btn {
      padding: 6px 12px;
      font-size: 0.875rem;
    }

    .btn-warning {
      color: #fff;
    }

    .btn-danger:hover,
    .btn-warning:hover {
      opacity: 0.9;
    }

    .page-title {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .page-title h1 {
      margin: 0;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="card p-4">
      <div class="page-title mb-4">
        <h1 class="text-primary">üìö Book Inventory</h1>
        <a href="/books/add" class="btn btn-success">‚ûï Add New Book</a>
      </div>

      <% if (books.length === 0) { %>
        <div class="alert alert-warning text-center">
          No books available. Add some books to get started!
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th scope="col">Cover</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Price ($)</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% books.forEach(book => { %>
                <tr>
                  <td>
                    <% if (book.coverImage) { %>
                      <img src="/uploads/<%= book.coverImage %>" alt="Cover" style="width: 60px; height: auto;" />
                    <% } else { %>
                      <span class="text-muted">No image</span>
                    <% } %>
                  </td>
                  <td><strong><%= book.title %></strong></td>
                  <td><%= book.author || '-' %></td>
                  <td><%= book.price ? '$' + book.price.toFixed(2) : '-' %></td>
                  <td>
                    <a href="/books/edit/<%= book._id %>" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</a>
                    <form action="/books/delete/<%= book._id %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?');">üóë Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
