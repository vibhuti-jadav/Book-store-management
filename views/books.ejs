<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>üìö Book Inventory | BookStore Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(180deg, #fffdf8 0%, #f4f1eb 100%);
      color: #2c2c2c;
      min-height: 100vh;
      padding-top: 80px;
    }

    /* Navbar */
    .navbar {
      background-color: #ffffffcc;
      backdrop-filter: blur(10px);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand {
      font-weight: 700;
      color: #6a4e23 !important;
      font-size: 1.4rem;
    }

    .nav-link {
      color: #6b5d4a !important;
      font-weight: 500;
      transition: color 0.3s;
    }

    .nav-link:hover {
      color: #a67c52 !important;
    }

    /* Card */
    .card {
      border: none;
      border-radius: 15px;
      background: #ffffff;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.07);
      padding: 2rem;
      transition: all 0.3s ease;
    }

    .card:hover {
      transform: translateY(-2px);
      box-shadow: 0 14px 35px rgba(0, 0, 0, 0.12);
    }

    .page-title {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.5rem;
    }

    .page-title h1 {
      font-weight: 700;
      color: #3a2c1a;
    }

    /* Buttons */
    .btn-success {
      background-color: #9c6b3f;
      border: none;
      font-weight: 500;
      padding: 10px 18px;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .btn-success:hover {
      background-color: #81542d;
      transform: translateY(-2px);
    }

    .btn-warning {
      background-color: #f1b24a;
      border: none;
      color: #fff;
      border-radius: 6px;
      transition: all 0.3s ease;
    }

    .btn-warning:hover {
      background-color: #d89a39;
      transform: translateY(-2px);
    }

    .btn-danger {
      background-color: #d35400;
      border: none;
      border-radius: 6px;
      transition: all 0.3s ease;
    }

    .btn-danger:hover {
      background-color: #ba4700;
      transform: translateY(-2px);
    }

    /* Table */
    table {
      border-radius: 10px;
      overflow: hidden;
    }

    thead {
      background-color: #f7f3ed;
      color: #4b3b2a;
    }

    tbody tr:hover {
      background-color: #faf6f1;
      transition: background 0.3s;
    }

    table img {
      border-radius: 6px;
      width: 55px;
      height: auto;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    /* Empty alert */
    .alert {
      border-radius: 10px;
      background-color: #fff7e6;
      color: #8c6b3f;
      border: 1px solid #f1d7a1;
    }

    /* Footer */
    footer {
      margin-top: 60px;
      text-align: center;
      color: #8c7b64;
      font-size: 0.9rem;
    }

    footer a {
      color: #a67c52;
      text-decoration: none;
      font-weight: 500;
    }

    footer a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
      <a class="navbar-brand" href="#">üìñ BookStore</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a href="/books" class="nav-link active">Books</a></li>
          <li class="nav-item"><a href="/books/add" class="nav-link">Add Book</a></li>
     
           </ul>
      </div>
    </div>
  </nav>

  <!-- Main -->
  <div class="container">
    <div class="card">
      <div class="page-title">
        <h1>üìö Book Inventory</h1>
        <a href="/books/add" class="btn btn-success">‚ûï Add New Book</a>
      </div>

      <% if (books.length === 0) { %>
        <div class="alert text-center">
          No books available yet. Start building your collection today!
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table align-middle">
            <thead>
              <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price ($)</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% books.forEach(book => { %>
                <tr>
                  <td>
                    <% if (book.coverImage) { %>
                      <img src="/uploads/<%= book.coverImage %>" alt="Cover">
                    <% } else { %>
                      <span class="text-muted fst-italic">No image</span>
                    <% } %>
                  </td>
                  <td><strong><%= book.title %></strong></td>
                  <td><%= book.author || '-' %></td>
                  <td><%= book.price ? '$' + book.price.toFixed(2) : '-' %></td>
                  <td>
                    <a href="/books/edit/<%= book._id %>" class="btn btn-warning btn-sm me-1">‚úèÔ∏è Edit</a>
                    <form action="/books/delete/<%= book._id %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this book?');">üóë Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>

  <footer>
    <p>¬© 2025 <a href="#">BookStore</a> | Built with ‚òï & üìñ</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
